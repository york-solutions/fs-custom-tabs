{
  "manifest_version": 2,

  "name": "FS Custom Tabs",
  "description": "Add custom tabs to the FamilySearch Family Tree",
  "version": "1.0",

  "content_scripts": [
    {
      "matches": ["https://familysearch.org/tree/*"],
      "css": ["src/css/index.css"],
      "js": ["dist/index.js"]
    }
  ],

  "permissions": ["storage"]
}